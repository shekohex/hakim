{
  "name": "Hakim Rust",
  "image": "ghcr.io/shekohex/hakim-base:latest",
  "build": {
    "args": {
      "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}"
    }
  },
  "features": {
    "../../../features/src/rust": {
      "version": "stable",
      "profile": "minimal"
    },
    "../../../features/src/nodejs": {
      "version": "lts"
    },
    "../../../features/src/bun": {
      "version": "latest"
    },
    "../../../features/src/uv": {},
    "../../../features/src/openchamber": {},
    "../../../features/src/clawdbot": {},
    "../../../features/src/lazyvim": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "vadimcn.vscode-lldb"
      ]
    }
  }
}
