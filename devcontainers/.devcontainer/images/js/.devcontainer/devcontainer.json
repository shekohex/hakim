{
  "name": "Hakim JS (Node.js + Bun)",
  "image": "ghcr.io/shekohex/hakim-base:latest",
  "build": {
    "args": {
      "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}"
    }
  },
  "features": {
    "../../../features/src/nodejs": {
      "version": "lts"
    },
    "../../../features/src/bun": {
      "version": "latest"
    },
    "../../../features/src/uv": {},
    "../../../features/src/openchamber": {},
    "../../../features/src/openclaw": {},
    "../../../features/src/lazyvim": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "oven.bun-vscode"
      ]
    }
  }
}
