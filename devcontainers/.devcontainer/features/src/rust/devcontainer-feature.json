{
    "name": "Rust (via Mise)",
    "id": "rust",
    "version": "1.0.0",
    "description": "Installs Rust toolchain using Mise.",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest",
                "1.93.0",
                "1.92.0",
                "1.91.0"
            ],
            "default": "1.93.0",
            "description": "Select the Rust version to install."
        },
        "profile": {
            "type": "string",
            "proposals": [
                "minimal",
                "default",
                "complete"
            ],
            "default": "minimal",
            "description": "Select the rustup profile to use during installation."
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils",
        "../../mise"
    ]
}
